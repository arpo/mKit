{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "public/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["client/src/**/*", "server/ts/**/*"],
  "exclude": ["node_modules"]
}
